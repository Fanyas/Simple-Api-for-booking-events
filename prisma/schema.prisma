generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String
  total_seats Int
  Booking     Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  event_id   Int
  event      Event    @relation(fields: [event_id], references: [id])
  user_id    String
  created_at DateTime @default(now())

  @@unique([event_id, user_id])
}
